<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-center text-3xl font-extrabold text-gray-900">
      Log in
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "mt-8 space-y-6") do |f| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div class="mb-4">
          <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :username, autofocus: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#4FB6CB] focus:border-[#4FB6CB] sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#4FB6CB] focus:border-[#4FB6CB] sm:text-sm" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center mt-3">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-[#4FB6CB] focus:ring-[#4FB6CB] border-gray-300 rounded" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="flex justify-center mt-7">
        <%= f.submit "Anmelden", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#4FB6CB] hover:bg-[#08A52F] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#4FB6CB]" %>
      </div>
    <% end %>


    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>

  </div>

</div>
