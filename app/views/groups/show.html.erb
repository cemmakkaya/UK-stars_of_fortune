<% if @group %>
  <div class="flex flex-col items-center min-h-screen bg-gray-100 p-8">
    <div class="w-full max-w-2xl space-y-6"> <!-- Reduzierte die max-w-4xl auf max-w-2xl -->
      <div class="bg-white shadow-md rounded-lg p-6 w-full">
        <h1 class="text-3xl font-bold text-[#111827] mb-4"><%= @group.name %></h1>
        <p class="text-lg text-gray-700">Mitglieder: <%= @members_count %> / <%= Group::MAX_MEMBERS %></p>
      </div>

      <div class="bg-white shadow-md rounded-lg p-6 w-full">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Mitglieder:</h2>
        <ul class="space-y-2">
          <% @group.users.each do |user| %>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-[#6CD5EA] rounded-full mr-3"></span>
              <%= user.username %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="bg-white shadow-md rounded-lg p-6 w-full">
        <% if @is_member %>
          <p class="text-green-500 font-semibold mb-4">Sie sind Mitglied dieser Gruppe.</p>
          <%= button_to 'Gruppe verlassen', leave_group_path(@group), method: :post, class: 'w-full px-4 py-2 bg-red-500 text-white font-semibold rounded-lg shadow-md hover:bg-red-600 transition duration-200' %>
        <% else %>
          <%= button_to 'Gruppe beitreten', join_group_path(@group), method: :post, class: 'w-full px-4 py-2 bg-[#6CD5EA] text-white font-semibold rounded-lg shadow-md hover:bg-[#4DAFC0] transition duration-200' %>
        <% end %>
      </div>

      <div class="text-center mt-8">
        <%= link_to 'ZurÃ¼ck zur GruppenÃ¼bersicht', groups_path, class: 'inline-block px-4 py-2 text-sm font-medium text-white bg-gray-600 hover:bg-gray-800 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500' %>
      </div>
    </div>
  </div>
<% end %>