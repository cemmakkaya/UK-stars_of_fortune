<div class="min-h-screen bg-gray-100 py-12">
  <div class="container mx-auto px-4">
    <!-- Title -->
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-12">WÃ¤hle einen Diamanten aus!</h1>

    <!-- Form -->
    <%= form_with(model: @game, local: true, class: "max-w-lg mx-auto bg-white p-8 shadow-lg rounded-lg") do |form| %>

      <!-- Error Messages -->
      <% if @game.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
          <strong class="font-bold">Oops!</strong>
          <ul class="mt-2">
            <% @game.errors.full_messages.each do |message| %>
              <li class="text-sm"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Card Selection Grid -->
      <div class="grid grid-cols-2 gap-6 mb-8">
        <% 4.times do |i| %>
          <div class="card-option">
            <%= form.radio_button :selected_card, i+1, class: "hidden peer" %>
            <%= form.label "selected_card_#{i+1}", class: "block border-2 border-gray-300 hover:border-blue-400 hover:bg-blue-50 rounded-lg p-6 text-center cursor-pointer peer-checked:border-blue-500 peer-checked:bg-blue-100 transition-all duration-300 ease-in-out" do %>
              <i class="fas fa-gem text-5xl text-blue-400 mb-4"></i>
              <p class="text-lg font-semibold text-gray-700"><%= i+1 %></p>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Bet Amount -->
      <div class="mb-8">
        <%= form.label :bet_amount, "Dein Einsatz (C-Bucks)", class: "block text-lg font-semibold text-gray-700 mb-2" %>
        <%= form.number_field :bet_amount, min: 1, max: current_user.c_bucks, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= form.submit "Wetten", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg shadow-md transition duration-300 ease-in-out focus:outline-none focus:ring-4 focus:ring-blue-300" %>
      </div>

    <% end %>
  </div>
</div>
