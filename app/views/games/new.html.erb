<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-8">WÃ¤hle eine Karte und wette!</h1>

  <%= form_with(model: @game, local: true, class: "max-w-md mx-auto") do |form| %>
    <% if @game.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold">Oops!</strong>
        <ul>
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-2 gap-4 mb-6">
      <% 4.times do |i| %>
        <div class="card-option">
          <%= form.radio_button :selected_card, i+1, class: "hidden peer" %>
          <%= form.label "selected_card_#{i+1}", class: "block p-4 border-2 border-gray-200 rounded-lg text-center cursor-pointer peer-checked:border-blue-500 peer-checked:bg-blue-100 transition-all" do %>
            <i class="fas fa-star text-4xl mb-2"></i>
            <p><%= i+1 %> . Karte</p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mb-6">
      <%= form.label :bet_amount, "Dein Einsatz (C-Bucks)", class: "block mb-2 font-bold" %>
      <%= form.number_field :bet_amount, min: 1, max: current_user.c_bucks, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <%= form.submit "Wetten", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  <% end %>
</div>