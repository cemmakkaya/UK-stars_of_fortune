<h1>Gamble Room</h1>

<div id="game-board" data-game-id="<%= @game.id %>">
  <h2>Game #<%= @game.id %></h2>
  <p>Status: <span id="game-status"><%= @game.status %></span></p>
  <div id="countdown" style="display: none;">Time left: <span id="timer">30</span></div>

  <div id="card-selection" style="display: none;">
    <h3>Select a card:</h3>
    <% (1..4).each do |card| %>
      <button class="card-button" data-card="<%= card %>">Card <%= card %></button>
    <% end %>
  </div>

  <div id="bet-input" style="display: none;">
    <h3>Place your bet:</h3>
    <input type="number" id="bet-amount" min="1" max="<%= current_user.c_bucks %>">
    <button id="place-bet">Place Bet</button>
  </div>

  <div id="game-result" style="display: none;">
    <h3>Game Result</h3>
    <p>Winning Card: <span id="winning-card"></span></p>
    <div id="winners-list"></div>
    <div id="losers-list"></div>
  </div>
</div>

<h2>Players:</h2>
<ul id="players-list">
  <% @game.users.each do |user| %>
    <li><%= user.username %></li>
  <% end %>
</ul>

<%= link_to 'Back to Group', group_path(@game.group) %>