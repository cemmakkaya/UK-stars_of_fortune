<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-8">Games</h1>

  <div class="grid gap-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
    <% @games.each do |game| %>
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-bold mb-2">Game #<%= game.id %></h2>
        <p class="mb-2">Status: <%= game.status %></p>
        <p class="mb-4">Players: <%= game.users.count %></p>
        <%= link_to 'View Game', game_path(game), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>

  <div class="mt-8 text-center">
    <%= link_to 'Create New Game', new_game_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>