<h1 class="text-2xl font-bold mb-4">Games</h1>

<% if @games.any? %>
  <ul>
    <% @games.each do |game| %>
      <li class="mb-2">
        <%= link_to "Game ##{game.id}", game_path(game), class: 'text-blue-500 hover:text-blue-700' %>
        - Status: <%= game.status %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No games available at the moment.</p>
<% end %>

<%= link_to 'Create New Game', new_game_path, class: 'mt-4 inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600' %>