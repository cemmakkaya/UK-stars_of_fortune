<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-center text-3xl font-extrabold text-gray-900">
      Benutzer bearbeiten
    </h2>

    <%= form_with(model: [:admin, @user], local: true, class: "mt-8 space-y-6") do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
          <h2 class="font-bold"><%= pluralize(@user.errors.count, "Fehler") %> verhindern, dass dieser Benutzer gespeichert wurde:</h2>
          <ul class="mt-2">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="rounded-md shadow-sm -space-y-px">
        <div class="mb-4">
          <%= form.label :username, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :username, autofocus: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#4FB6CB] focus:border-[#4FB6CB] sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= form.email_field :email, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#4FB6CB] focus:border-[#4FB6CB] sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= form.label :c_bucks, class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :c_bucks, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#4FB6CB] focus:border-[#4FB6CB] sm:text-sm" %>
        </div>

        <!-- Checkbox with added spacing -->
        <div class="flex items-center mt-4 mb-6"> <!-- Increased margin-top for checkbox spacing -->
          <%= form.check_box :admin, class: "h-4 w-4 text-[#4FB6CB] focus:ring-[#4FB6CB] border-gray-300 rounded" %>
          <%= form.label :admin, class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <div class="flex justify-center mt-8"> <!-- Increased margin-top for button spacing -->
          <%= form.submit "Benutzer aktualisieren", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#4FB6CB] hover:bg-[#08A52F] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#4FB6CB]" %>
        </div>
      </div>
    <% end %>

    <div class="text-center mt-6">
      <%= link_to 'ZurÃ¼ck zu Benutzern', admin_users_path, class: 'inline-block px-4 py-2 text-sm font-medium text-white bg-gray-600 hover:bg-gray-800 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500' %>
    </div>
  </div>
</div>
