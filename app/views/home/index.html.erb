<div class="flex flex-col items-center min-h-screen bg-gray-100 mt-40">
  <h1 class="text-4xl font-bold text-gray-900 mb-8">
    Welcome to <span class="underline decoration-[#6199A4]">StarsOfFortune</span>
  </h1>

  <div class="flex space-x-4">
    <% if user_signed_in? %>
      <%= link_to 'Groups', groups_path, class: 'px-6 py-3 bg-[#4FB6CB] text-white font-semibold rounded-lg shadow-md hover:bg-[#3A95A4] focus:outline-none focus:ring-2 focus:ring-[#4FB6CB] focus:ring-opacity-75 transition duration-200 transform hover:scale-105', data: { turbo: false }, aria_label: 'View Groups' %>
      <%= link_to 'Games', games_path, class: 'px-6 py-3 bg-[#4FB6CB] text-white font-semibold rounded-lg shadow-md hover:bg-[#3A95A4] focus:outline-none focus:ring-2 focus:ring-[#4FB6CB] focus:ring-opacity-75 transition duration-200 transform hover:scale-105', data: { turbo: false }, aria_label: 'View Game History' %>
      <%= link_to 'History', histories_path, class: 'px-6 py-3 bg-[#4FB6CB] text-white font-semibold rounded-lg shadow-md hover:bg-[#3A95A4] focus:outline-none focus:ring-2 focus:ring-[#4FB6CB] focus:ring-opacity-75 transition duration-200 transform hover:scale-105', data: { turbo: false }, aria_label: 'View Game History' %>

    <% else %>
      <%= link_to 'Sign In', new_user_session_path, class: 'px-6 py-3 bg-[#4FB6CB] text-white font-semibold rounded-lg shadow-md hover:bg-[#3A95A4] focus:outline-none focus:ring-2 focus:ring-[#4FB6CB] focus:ring-opacity-75 transition duration-200 transform hover:scale-105', data: { turbo: false }, aria_label: 'Sign in to your account' %>
      <%= link_to 'Sign Up', new_user_registration_path, class: 'px-6 py-3 bg-[#4FB6CB] text-white font-semibold rounded-lg shadow-md hover:bg-[#3A95A4] focus:outline-none focus:ring-2 focus:ring-[#4FB6CB] focus:ring-opacity-75 transition duration-200 transform hover:scale-105', data: { turbo: false }, aria_label: 'Create a new account' %>
    <% end %>
  </div>
</div>